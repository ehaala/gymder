<form action="/auth/signup" method="POST">
  <div class="form-group">
    <label for="authName">Username</label>
    <input id="authName" class="form-control" type="text" name="name" placeholder="Create a username that will display in your profile">
  </div>

  <div class="form-group">
    <label for="authEmail">Email</label>
    <input id="authEmail" class="form-control" type="email" name="email">
  </div>

  <div class="form-group">
    <label for="authPassword">Password</label>
    <input id="authPassword" class="form-control" type="password" name="password" placeholder="At least 8 characters">
  </div>

  <input class="btn btn-primary" type="submit">
</form>