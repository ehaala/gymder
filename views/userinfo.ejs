<div class='col-sm-6'>
	<h1><%= user.name %></h1>

	<p>( <%= user.email %> )</p>

	<h3>Following:</h3>
	<div>
		<% gyms.forEach(function(gym) {%>
			<div class="usergyms">
			<a href="/following/<%-gym.id %>"><%= gym.name %></a>
			</div>
		<% });%>
	</div>

	<hr />

	<a href="/users">&larr; Back to all users</a>
</div>

<div class='schedule col-sm-6' style="overflow:scroll;">
	<h3>Schedule</h3>
	<% user.schedules.forEach(function(schedule) { %>
		<p><%= schedule.day %> - <%= schedule.time %></p>
	<% }); %>
</div>